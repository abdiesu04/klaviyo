{
  "name": "klaviyo-flow-builder",
  "version": "1.0.0",
  "description": "Automated Klaviyo flow builder â€” dual-mode: API-first with Playwright browser automation fallback. Built for ZHS Ecom.",
  "main": "dist/index.js",
  "bin": {
    "klaviyo-flow": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node src/index.ts",
    "build:flow": "ts-node src/index.ts build",
    "build:flow:browser": "ts-node src/index.ts build --mode browser",
    "build:flow:api": "ts-node src/index.ts build --mode api",
    "verify": "ts-node src/index.ts verify",
    "test:abandoned-cart": "ts-node src/index.ts build --flow flows/abandoned-cart.json",
    "test:abandoned-cart:ab": "ts-node src/index.ts build --flow flows/abandoned-cart-ab.json",
    "web": "ts-node src/server.ts",
    "lint": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "klaviyo",
    "flow-builder",
    "browser-automation",
    "playwright",
    "email-marketing",
    "ecommerce",
    "retention"
  ],
  "author": "ZHS Ecom",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/multer": "^2.0.0",
    "axios": "^1.7.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cors": "^2.8.6",
    "dotenv": "^16.4.0",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "multer": "^2.0.2",
    "playwright": "^1.48.0",
    "sharp": "^0.34.5",
    "uuid": "^10.0.0",
    "winston": "^3.14.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "rimraf": "^6.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0"
  }
}
