# ==============================================================================
# Klaviyo Flow Builder â€” Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values.
#
# IMPORTANT: Never commit .env to version control.
# ==============================================================================

# --- Klaviyo API Configuration (for API mode) ---
# Your Klaviyo Private API Key
# Find it at: Klaviyo > Settings > API Keys > Private API Keys
KLAVIYO_API_KEY=pk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# API revision header (beta flows API requires this)
KLAVIYO_API_REVISION=2024-10-15.pre

# --- Klaviyo Login Credentials (for Browser mode) ---
# Used by Playwright to log into Klaviyo's web UI
KLAVIYO_EMAIL=your-email@example.com
KLAVIYO_PASSWORD=your-password-here

# --- Browser Automation Settings ---
# Show browser window during automation (true/false)
# Set to true for debugging, false for headless production runs
HEADLESS=true

# Slow down browser actions by this many ms (useful for debugging)
# Set to 0 for production speed
SLOW_MO=0

# Screenshot directory for debugging/verification
SCREENSHOT_DIR=./screenshots

# --- General Settings ---
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Maximum retries for flaky operations
MAX_RETRIES=3

# Timeout for page operations in ms
PAGE_TIMEOUT=30000
